<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <declare-styleable name="HeySpinner">
        <attr name="itemTextColor" format="color" />
        <attr name="showArrow" format="boolean" />
        <attr name="arrowSrc" format="reference" />
        <attr name="itemBackground" format="reference" />
        <attr name="popupBackground" format="reference" />
        <attr name="itemGravity" format="integer" />
        <attr name="arrowColor" format="reference" />
        <attr name="dividerColor" format="reference" />
        <attr name="dividerHeight" format="dimension" />
        <attr name="tintColor" format="boolean" />
        <attr name="popupHeight" format="float" />
    </declare-styleable>

</resources>
